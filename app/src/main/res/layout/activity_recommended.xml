<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#201E28"
    android:padding="16dp">

    <Button
        android:id="@+id/btn_pressure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#e2a600"
        android:textColor="#5e4602"
        android:text="Проблемы с давлением" />

    <Button
        android:id="@+id/btn_sugar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#e2a600"
        android:textColor="#5e4602"
        android:text="Диабет" />

    <Button
        android:id="@+id/btn_cholesterol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#e2a600"
        android:textColor="#5e4602"
        android:text="Холестерин" />

    <Button
        android:id="@+id/btn_heart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#e2a600"
        android:textColor="#5e4602"
        android:text="Проблемы с сердцем" />
</LinearLayout>